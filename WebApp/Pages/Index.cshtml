@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}


<script type="text/javascript" src="~/js/ListEvent.js"></script>

<div class="text-center">
    <input type="text" class="text-input" id="text-input" placeholder="Search for a swedish city"/>
    <button class="search-button" id="search-button" onclick="getEventsByLocation()">
        Search
    </button>
</div>
<div class="container">
    <div class="gridbox" id="gridbox">
    </div>
</div>

<div class="detail-view">
    details
    <button class="close-button" aria-label="Close alert" type="button" data-close>
        <span aria-hidden="true">&times;</span>
    </button>
</div>


